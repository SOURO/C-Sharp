@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MVCDemo_C#</title>
</head>
<body>
    <div>
        Welcome to this Demo station of C# - MVC !!
    </div>
    <hr />
    <div>
        @{
            MvcApplication1.Models.Bike bike = (MvcApplication1.Models.Bike) ViewData["Bike"];
        }
    </div>
    <b>Bike Details :</b><br />
        @bike.BikeName @bike.BikeModel<br />
        Price : @bike.BikePrice.ToString("G")<br />
</body>
</html>
